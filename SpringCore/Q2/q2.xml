<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
    <bean id="Question1" class="com.springcore.Question">
        <property name="questionId"  value="111"/>
        <property name="question" value="Who are you?"/>
        <property name="answers">
            <list>
                <value>I am ABC </value>
                <value>I am XYZ </value>
                <value>I am PQR </value>
            </list>
        </property>
    </bean>

    <bean id="Question2" class="com.springcore.Question">
        <property name="questionId"  value="111"/>
        <property name="question" value="Who are you?"/>
        <property name="answersSet">
            <set>
                <value>I am ABC </value>
                <value>I am XYZ </value>
                <value>I am PQR </value>
            </set>
        </property>
    </bean>
                                    
    <bean id="Question3" class="com.springcore.Question">
        <property name="questionId"  value="111"/>
        <property name="question" value="Who are you?"/>
        <property name="answersMap">
            <map>
                <entry key="1" value="I am ABC"/>
                <entry key="2" value="I am XYZ"/>
                <entry key="3" value="I am PQR"/>
            </map>
        </property>
    </bean>

</beans>